root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = unset
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
tab_width = unset

[*.{yaml,yml}]
tab_width = 2
indent_size = 2

[*.{kt,kts}]
indent_size = 4
tab_width = 4
ktlint_function_naming_ignore_when_annotated_with=Composable, Test